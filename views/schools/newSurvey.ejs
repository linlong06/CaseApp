                <label for="c3-1">Never</label>
                <input type="radio" name="survey[c3]" value="2" id="c3-2">
                <label for="c3-2">Almost never</label>
                <input type="radio" name="survey[c3]" value="3" id="c3-3">
                <label for="c3-3">Sometimes</label>
                <input type="radio" name="survey[c3]" value="4" id="c3-4">
                <label for="c3-4">Almost every time</label>
                <input type="radio" name="survey[c3]" value="5" id="c3-5">
                <label for="c3-5">Every time</label>
