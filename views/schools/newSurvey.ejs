<%- include("../partials/header") %>

<div class="container survey">
    <h2 class="title">Welcome to take the survey!</h2>
    <hr>
    
    <div class="col-md-12">
        <div><h4>State: <%= school.state %></h4></div>
        <div><h4>City: <%= school.city %></h4></div>
        <div><h4>Name: <%= school.name %></h4></div>
        
